<div class="container mt-5 mx-5">
  <div class="login-content" style="max-width:400px;margin:auto;">
    <h2 class="mb-3" style="text-align:center;font-weight:bold;">Account Login</h2>
    <form action="/login" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        <input type="email" class="form-control my-2" id="exampleInputEmail1" aria-describedby="emailHelp"
          placeholder="Email" name="email">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control my-2" id="exampleInputPassword1" placeholder="Password"
          name="password">
      </div>
      <div class="form-group mt-5" style="text-align:center;">
        <button type="submit" class="btn btn-primary">Sign in</button>
      </div>
    </form>
  </div>
</div>